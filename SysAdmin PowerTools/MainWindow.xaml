<Window x:Class="SysAdmin_PowerTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SysAdmin_PowerTools"
        xmlns:viewModel="clr-namespace:SysAdmin_PowerTools.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600" Width="1000"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        Title="SysAdmin PowerTools">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#272537" 
            CornerRadius="20">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="301"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock 
                       Text="SysAdmin PowerTools" 
                       Foreground="White" 
                       FontSize="20" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontFamily="/Fonts/#Poppins" Height="30" Width="218"/>

            <StackPanel Grid.Row="1">      <!-- Add the following StackPanel to the Grid.Row="1" element -->
                <RadioButton Content="Home" 
                             Foreground="White"
                             FontSize="18"
                             IsChecked="True"
                             GroupName="Menu"
                             Style="{StaticResource MenuButtonTheme}" 
                             Command="{Binding HomeViewCommand}"/>

                <RadioButton Content="Tech Docs"
                             Foreground="White"
                             FontSize="18"
                             GroupName="Menu"
                             Style="{StaticResource MenuButtonTheme}" 
                             Command="{Binding TechDocViewCommand}"/>            

                <RadioButton Content="Server Tools"
                             Foreground="White"
                             FontSize="18"
                             GroupName="Menu"
                             Style="{StaticResource MenuButtonTheme}" 
                             Command="{Binding ServerToolsViewCommand}"/>             
                
                <RadioButton Content="ECM Keyword Lookup"
                             Foreground="White"
                             FontSize="18"
                             GroupName="Menu"
                             Style="{StaticResource MenuButtonTheme}" 
                             Command="{Binding KeywordLookupViewCommand}"/>
                
                
                

                <RadioButton Content="Access Review Tools"
                             Foreground="White"
                             FontSize="18"
                             GroupName="Menu"
                             Style="{StaticResource MenuButtonTheme}" 
                             Command="{Binding AccessReviewViewCommand}"/>

                <!-- Add the following RadioButtons to the StackPanel -->
                <!--
                
                <RadioButton Content="ESA Diagrams"
                             Foreground="White"
                             FontSize="18"
                             GroupName="Menu"
                             Style="{StaticResource MenuButtonTheme}" 
                             Command="{Binding DiagramsViewCommand}"/>
                -->

            </StackPanel>

            <TextBox Width="250"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5,18,0,17"
                     Grid.Column="1"
                     Style="{StaticResource TextBoxTheme}"/>

            <ContentControl Grid.Column="1" 
                            Grid.Row="1" 
                            Margin="10,10,10,10"
                            Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>


