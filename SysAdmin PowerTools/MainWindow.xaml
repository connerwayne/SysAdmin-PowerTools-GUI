<Window x:Class="SysAdmin_PowerTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SysAdmin_PowerTools"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        Title="SysAdmin PowerTools">

    <Border Background="#272537" 
            CornerRadius="20">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" 
                       Grid.Row="0" 
                       Text="SysAdmin PowerTools" 
                       Foreground="White" 
                       FontSize="20" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"
                       Margin="5,0,0,0"/>

            <StackPanel Grid.Row="1">
                <RadioButton Content="Home"
                                Foreground="White"
                                FontSize="18"
                                IsChecked="True"
                                GroupName="Menu"
                                Style="{StaticResource MenuButtonTheme}" 
                                Checked="RadioButton_Checked"/>
                <RadioButton Content="ECM Keyword Lookup"
                                Foreground="White"
                                FontSize="18"
                                GroupName="Menu"
                                Style="{StaticResource MenuButtonTheme}" 
                                Checked="RadioButton_Checked"/>
                <RadioButton Content="Access Review Tools"
                                Foreground="White"
                                FontSize="18"
                                GroupName="Menu"
                                Style="{StaticResource MenuButtonTheme}" 
                                Checked="RadioButton_Checked"/>
                <RadioButton Content="BankSystems SOPs"
                                Foreground="White"
                                FontSize="18"
                                GroupName="Menu"
                                Style="{StaticResource MenuButtonTheme}" 
                                Checked="RadioButton_Checked"/>
            </StackPanel>

            <TextBox Width="250"
                    Height="40"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="5"
                    Grid.Column="1"
                    Style="{StaticResource TextBoxTheme}"/>

            <ContentControl Grid.Column="1" 
                            Grid.Row="1" 
                            Margin="10"/>
        </Grid>
    </Border>
</Window>

