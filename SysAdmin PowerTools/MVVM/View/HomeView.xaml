<UserControl x:Class="SysAdmin_PowerTools.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SysAdmin_PowerTools.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Home View" 
                   FontSize="20"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal">
            <Border Width="320"
                    Height="200">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="Navy" Offset="0"/>
                        <GradientStop Color="Coral" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,400,200"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Current Outages"
                                      FontSize="28"
                                      Foreground="White"
                                      Margin="20,10,10,0"/>
                        <TextBlock Text="BankSystems - No outages to report"
                                      FontSize="14"
                                      Foreground="White"
                                      Margin="30,10,20,10"/>
                        <TextBlock Text="IT/Infra - No outages to report"
                                      FontSize="14"
                                      Foreground="White"
                                      Margin="30,10,20,10"/>

                    </StackPanel>

                    <Image  Width="350"
                            Height="200"
                            Source="/Images/outage.png"                            
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Opacity="0.4"
                            Margin="0,0,0,0"/>


                </Grid>

            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>
