<UserControl x:Class="SysAdmin_PowerTools.MVVM.View.ServerToolsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SysAdmin_PowerTools.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Server Tools View" 
                   FontSize="28"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">
            <Border Width="320"
                    Height="200">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="Navy" Offset="0"/>
                        <GradientStop Color="Coral" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,320,200"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Tools"
                                    FontSize="28"
                                    Foreground="White"
                                    Margin="20,10,10,0"/>
                        <TextBlock Text="RoyalTS"
                                    FontSize="14"
                                    Foreground="White"
                                    Margin="30,10,20,10"/>
                        <TextBlock Text="Server Hostnames for CyberArk"
                                    FontSize="14"
                                    Foreground="White"
                                    Margin="30,10,20,10"/>
                        <TextBlock Text="Standard Operating Procedures"
                                    FontSize="14"
                                    Foreground="White"
                                    Margin="30,10,20,10"/>
                    </StackPanel>

                    <Image  Width="320"
                            Height="200"
                            Source="/Images/ServerTools.png"                            
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Opacity="0.4"
                            Margin="0,16,0,0"/>
                </Grid>
            </Border>
            <Border Width="200"
                    Height="200"
                    CornerRadius="10"
                    Margin="45,0,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="Orange" Offset="0"/>
                        <GradientStop Color="Bisque" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </StackPanel>

        <StackPanel>
            <TextBlock  Text="Systems" 
                  FontSize="20"
                  Foreground="White"
                  HorizontalAlignment="Left"
                  Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Border Width="150"
                        Height="150"
                        Background="Magenta"
                        CornerRadius="10"
                        Margin="15,0,0,0"/>
                <Border Width="150"
                        Height="150"
                        Background="AntiqueWhite"
                        CornerRadius="10"
                        Margin="15,0,0,0"/>
                <Border Width="150"
                        Height="150"
                        Background="CornflowerBlue"
                        CornerRadius="10"
                        Margin="15,0,0,0"/>
                <Border Width="150"
                        Height="150"
                        Background="Aquamarine"
                        CornerRadius="10"
                        Margin="15,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>

